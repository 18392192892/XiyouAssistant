page {
	background-color: #F5F5F5;
}

.grade_query {
	width: 100%;
}

.grade_query-head {
	width: 100%;
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.grade_query-head-term {
	height: 50rpx;
	color: #3498DB;
	font-size: 30rpx;
	padding: 0 56rpx;
	border-radius: 20rpx;
	box-sizing: border-box;
	background-color: white;
	border: 2px solid #3498DB;
}

.grade_query-main {
	width: 100%;
}
.grade_query-main-title {
	width: 100%;
	color: white;
	height: 60rpx;
	display: flex;
	padding: 0 60rpx;
	font-size: 24rpx;
	text-align: center;
	letter-spacing: 1px;
	align-items: center;
	box-sizing: border-box;
	justify-content: space-between;
	background-color: #3498DB;
}
.grade_query-main-info {
	width: 100%;
	padding: 25rpx;
	box-sizing: border-box;
}
.grade_query-main-info-item {
	width: 100%;
	height: 70rpx;
	display: flex;
	font-size: 22rpx;
	padding: 0 25rpx;
	align-items: center;
	border-radius: 10rpx;
	margin-bottom: 25rpx;
	box-sizing: border-box;
	background-color: white;
	box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
}
.grade_query-main-info-item-name {
	max-width: 160rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;

}
.grade_query-main-info-item-type {
	width: 38rpx;
	height: 38rpx;
	color: white;
	display: flex;
	font-size: 18rpx;
	border-radius: 50%;
	align-items: center;
	justify-content: center;
	background-color: #3498DB;
}
.grade_query-main-info-average {
	width: 100%;
	height: 100rpx;
	border-radius: 10rpx;
	margin-bottom: 30rpx;
	background-color: white;
	box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
}
.grade_query-main-info-average text {
	width: 50%;
	height: 100%;
	font-size: 30rpx;
	display: inline-flex;
	align-items: center;
	justify-content: center;
}
.grade_query-main-info-all_grade {
	width: 100%;
	height: 300rpx;
	display: flex;
	justify-content: space-between;
}
.grade_query-main-info-all_grade-box {
	width: calc((100% - 30rpx) / 2);
	height: 100%;
	padding: 24rpx 60rpx;
	border-radius: 10rpx;
	box-sizing: border-box;
	background-color: white;
	box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
}
.grade_query-main-info-all_grade-box text {
	display: block;
	font-size: 30rpx;
	margin-bottom: 20rpx;
}