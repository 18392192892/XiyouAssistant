page {
	background: #F5F5F5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.cet46_query {
	width: 100%;
	display: flex;
	justify-content: center;
}

/*查询图片*/
.cet46_query-img {
	position: absolute;
	margin-top: 100rpx;
}
.cet46_query-img image {
	width: 480rpx;
	height: 160rpx;
}

/*查询主体*/
.cet46_query-main {
	width: 680rpx;
	/*height: 200rpx;*/
	margin-top: 218rpx;
	border-radius: 10rpx;
	padding: 60rpx 100rpx;
	box-sizing: border-box;
	background-color: white;
	box-shadow: 0 0 20rpx grey;
}
.cet46_query-main-form {
	width: 100%;
	display: block-flex;
	border-radius: 10rpx;
	box-sizing: border-box;
	padding: 100rpx 45rpx;
	justify-content: center;
	border: 2rpx solid #808080;
}
.cet46_query-main-form-input {
	display: flex;
	align-items: center;
	margin-bottom: 30rpx;
}
.cet46_query-main-form-input image {
	width: 44rpx;
	height: 44rpx;
	margin-right: 20rpx;
}
.cet46_query-main-form-input input{
	width: 300rpx;
	color: #B3B3B3;
	padding-left: 20rpx;
	border-bottom: 1px solid #B3B3B3;
}
.cet46_query-main-form-button {
	margin-top: 190rpx;
	text-align: center;
}
.cet46_query-main-form-button view {
	color: white;
	width: 200rpx;
	height: 60rpx;
	font-size: 30rpx;
	text-indent: 30rpx;
	align-items: center;
	border-radius: 40rpx;
	display: inline-flex;
	letter-spacing: 30rpx;
	justify-content: center;
	background-color: #3498BD;
}