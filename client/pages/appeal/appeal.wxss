page {
	background-color: #F5F5F5;
}

.appeal {
	width: 100%;
}

.appeal-main {
	width: 600rpx;
	border-radius: 30rpx;
	padding: 70rpx 100rpx;
	box-sizing: border-box;
	background-color: white;
	margin: 120rpx auto 80rpx auto;
	box-shadow: 0 0 40rpx rgba(0, 0, 0, 0.4);
}
.appeal-main-item {
	width: 100%;
	height: 60rpx;
	display: flex;
	color: #3498DB;
	font-size: 30rpx;
	align-items: center;
	border-radius: 15rpx;
	margin-bottom: 55rpx;
	justify-content: center;
	box-sizing: border-box;
	border: 2px solid #3498DB;
}
.appeal-main-reason {
	width: 100%;
	padding: 15rpx 0;
	/*background-color: black;*/
}
.appeal-main-reason text {
	color: #3498DB;
	display: block;
	font-size: 30rpx;
	margin-bottom: 25rpx;
	padding-left: 15 rpx;
}
.appeal-main-reason-input {
	width: 100%;
	padding: 30rpx;
	font-size: 28rpx;
	border-radius: 15rpx;
	box-sizing: border-box;
	border: 2px solid #3498DB;
}
.appeal-main-reason-input textarea {
	width: 100%;
}

.appeal-button {
	color: white;
	display: flex;
	width: 400rpx;
	height: 90rpx;
	margin: 0 auto;
	letter-spacing: 1px;
	align-items: center;
	border-radius: 45rpx;
	justify-content: center;
	background-color: #3498DB;
	box-shadow: 0 0 40rpx rgba(0, 0, 0, 0.4);
}