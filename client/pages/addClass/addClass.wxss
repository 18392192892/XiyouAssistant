page {
	background-color: #F5F5F5;
}

.add_class {
	width: 100%;
	padding: 0 25rpx;
	box-sizing: border-box;
}

.add_class-name {
	width: 100%;
	height: 100rpx;
	margin-top: 60rpx;
}
.add_class-name-box {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	border-radius: 30rpx;
	justify-content: start;
	background-color: white;
	box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}
.add_class-name-box text {
	color: #3498DB;
	padding: 0 50rpx;
	text-indent: 2px;
	letter-spacing: 2px;
	border-right: 1px solid #E6E6E6;
}
.add_class-name-box input {
	padding-left: 44rpx;
	width: 300rpx;
}

.add_class-info {
	margin-top: 80rpx;
	width: 100%;
}
.add_class-info-box {
	width: 100%;
	border-radius: 30rpx;
	padding: 120rpx 60rpx;
	box-sizing: border-box;
	background-color: white;
	box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}
.add_class-info-box-item {
	width: 100%;
	height: 90rpx;
	display: flex;
	align-items: center;
}
.add_class-info-box-item image {
	width: 40rpx;
	height: 40rpx;
	margin-right: 40rpx;
}
.add_class-info-box-item-choice {
	width: 100%;
	display: flex;
	height: 80%;
	align-items: center;
	padding-left: 10rpx;
	box-sizing: border-box;
	border-bottom: 1px solid #CCCCCC;
}
.add_class-info-box-item-choice text {
	color: #3498DB;
	letter-spacing: 2px;
	margin-right: 40rpx;
}

.add_class-button {
	width: 100%;
	height: 100rpx;
	margin-top: 80rpx;
}
.add_class-button-box {
	width: 100%;
	height: 100%;
	color: white;
	display: flex;
	text-indent: 120rpx;
	align-items: center;
	border-radius: 30rpx;
	letter-spacing: 120rpx;
	justify-content: center;
	background-color: #3498DB;
		box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}